{
  "name": "@mich4l/nestjs-cassandra",
  "version": "1.0.2",
  "description": "Cassandra Nest.js connector module",
  "author": "Micha≈Ç Dziuba",
  "homepage": "https://github.com/michaldziuba03/nestjs-modules/tree/main/packages/cassandra",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaldziuba03/nestjs-modules"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "keywords": [
    "nestjs",
    "cassandra",
    "typescript",
    "database",
    "connector",
    "driver"
  ],
  "scripts": {
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "pre-commit": "lint-staged",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \\\"lib/**/*.ts\\\" \\\"tests/**/*.ts\\\"",
    "lint": "eslint \"{src,apps,libs,tests,lib}/**/*.ts\" --fix",
    "test": "pnpm migrate:up && jest && pnpm migrate:down",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "npm:publish": "pnpm build && pnpm publish --access public"
  },
  "peerDependencies": {
    "cassandra-driver": "^4.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "cassandra-driver": "^4.7.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "{lib,tests}/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  }
}
